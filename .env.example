# Environment template for docker-compose
# Copy to .env and fill in your values

# RPC Configuration
RPC_URL=http://host.docker.internal:8545
# Or for external endpoints:
# RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Contract and Event Configuration
CONTRACT_ADDR=0x1234567890123456789012345678901234567890
EVENT_TOPIC=0xabcdefabcdefabcdefabcdefabcdefabcdefabcdefabcdefabcdefabcdefabcd

# Indexing Configuration
WORKERS=8
MAX_BLOCK_RANGE=500
ROLLBACK_WINDOW=128
BACKFILL=true
START_BLOCK=0
END_BLOCK=0
CHECKPOINT_INTERVAL=30s

# API Configuration
API_ADDR=:8080
METRICS_ADDR=:9090

# Logging
LOG_LEVEL=info
LOG_JSON=false

# PostgreSQL (optional)
POSTGRES_USER=indexer
POSTGRES_PASSWORD=changeme

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
